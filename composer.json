{
    "name": "chiron/reactphp",
    "description": "Give it a nice description!",
    "keywords": [],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\React\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\React\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "react/http": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0",
        "overtrue/phplint": "^2.0",
        "chiron/coding-standard": "^3.0"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse src --level=max",
        "phplint": "phplint --ansi",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "chiron": {
            "bootloaders": [
                "Chiron\\React\\Bootloader\\ReactDispatcherBootloader",
                "Chiron\\React\\Bootloader\\ReactCommandBootloader"
            ]
        }
    }
}
